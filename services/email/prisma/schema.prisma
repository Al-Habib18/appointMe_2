generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum emailStatus {
  success 
  failed
}

enum emailSource {
  user_registration
  account_activation
  password_reset
  email_change
  appointment_create
  appointment_update
}
model Email {
  id        String  @id @default(cuid())
  from      String
  to        String
  subject   String
  text      String
  source    emailSource @default(user_registration)
  status    emailStatus @default(success)
  createdAt DateTime    @default(now())
}